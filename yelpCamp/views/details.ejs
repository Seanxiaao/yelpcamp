<%include ./partials/header.ejs%>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Spectacle</p>
            <div class="list-group">
                <li class="list-group-item active">info 1</li>
                <li class="list-group-item">info 2</li>
                <li class="list-group-item">info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <figure class="img-fluid img-thumbnail">
                <img class="img-fluid img-rounded" src="<%=data.url%>">
                <figcaption class="figure-caption text-right">
                    <span class="float-left"><I>create by <%=data.author.username%></I></span>
                    <h4>-<a><%=data.name%></a></h4>
                </figcaption>
            </figure>
            <p>
                <%=data.description%>
            </p>
            <p>
                <a class="btn btn-warning" href="<%=data.id%>/edit">Modify</a>
                <form action="<%=data.id%>?_method=DELETE" method="post">
                    <button class="btn btn-danger">delete</button>
                </form>
            </p>
            <div class="card card-body bg-light">  <!--replace well in bs4-->
                <div class="text-right">
                    <p>
                        <a class="btn btn-success" href="<%=data._id%>/comments/new">Add your comment</a>
                    </p>
                </div>
                <% data.comments.forEach(function (comment) { %>
                <hr>
                <div class="row">
                    <div class="col-sm-12">
                        <I>by</I> <strong><%=comment.username%></strong>
                        <span class="float-right">3/3/2020</span> <!--replace pull-right in bs4-->
                        <p><%=comment.text%></p>
                        <a class="btn btn-xs btn-warning" href="<%=data._id%>/comments/<%=comment._id%>/edit">Edit</a>
                        <form action="<%=data._id%>/comments/<%=comment._id%>?_method=DELETE" method="post">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
                <% })%>
            </div>

        </div>

    </div>

</div>

